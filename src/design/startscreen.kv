<StartScreen>:

    AnchorLayout:
        anchor_y: 'top'

        BoxLayout:
            orientation: 'vertical'
            size_hint: .9, .7
            spacing: 2

            BoxLayout:
                pos_hint: {'center_x': .5,'center_y': .5}
                size_hint: 1, .8

                Header:
                    size_hint: .8, .5
                    pos_hint: {'left_x': 0,'center_y': .5}
                    text: 'LOCKPICK'

                Image:
                    size_hint: .2, .5
                    pos_hint: {'right_x': 1,'center_y': .5}
                    source: './res/img/logo.png'
                    allow_stretch: False

            Button:
                size_hint: None, .1
                pos_hint: {'center_x': .5,'center_y': .5}
                text: 'Log in'

            BoxLayout:
                size_hint: .8, .1
                pos_hint: {'center_x': .5,'center_y': .5}

                Label:
                    text: 'New to Lockpick?'

                Label:
                    text: 'Sign up!'
                    color: (0, .3, .7, 1)