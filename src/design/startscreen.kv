<StartScreen>:

    AnchorLayout:
        anchor_y: 'top'

        BoxLayout:
            orientation: 'vertical'
            size_hint: .9, .7
            spacing: 15

            BoxLayout:
                size_hint: None, .5
                pos_hint: {'center_x': .5, 'center_y': .5}
                width: self.minimum_width

                Header:
                    size_hint: None, None
                    size: self.texture_size
                    pos_hint: {'center_y': .5}
                    text: 'LOCKPICK'

                Image:
                    size: '42dp', '42dp'
                    size_hint: None, None
                    pos_hint: {'center_y': .5}
                    source: './res/img/logo.png'
                    allow_stretch: False

            RoundedButton:
                size_hint: None, .075
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Log in'
                on_press: root.manager.current = 'login'

            BoxLayout:
                size_hint: None, None
                pos_hint: {'center_x': .5, 'center_y': .5}
                height: self.minimum_height
                width: self.minimum_width
                spacing: 3

                Label:
                    size_hint: None, None
                    size: self.texture_size
                    text: 'New to Lockpick?'

                Label:
                    text: '[ref=signup]Sign up[/ref]!'
                    size_hint: None, None
                    size: self.texture_size
                    color: (0, .3, .7, 1)
                    markup: True
                    on_ref_press: root.manager.current = 'signup'