<SignupScreen>:

    AnchorLayout:
        anchor_y: 'top'
        padding: [0, dp(55)]

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(30)
            size_hint: .8, None
            pos_hint: {'center_x': .5, 'center_y': .5}
            height: self.minimum_height

            Button:
                text: '< Back'
                size_hint: None, None
                width: self.texture_size[0]
                height: self.texture_size[1]
                pos_hint: {'left': 0, 'top': 0}
                on_press: root.manager.current = 'start'

            Widget:
                size_hint_y: None
                height: dp(30)   

            TextInput:
                id: name_input
                size_hint: 1, None
                hint_text: 'Name'
                height: dp(40)
                multiline: False

            TextInput:
                id: surname_input
                size_hint: 1, None
                hint_text: 'Surname'
                height: dp(40)
                multiline: False 
            
            TextInput:
                id: username_input
                size_hint: 1, None
                hint_text: 'Username'
                height: dp(40)
                multiline: False 

            TextInput:
                id: password_input
                size_hint: 1, None
                hint_text: 'Password'
                height: dp(40)
                multiline: False

            RoundedButton:
                size_hint: .7, None
                height: dp(50)
                pos_hint: {'center_x': .5,'center_y': .5}
                text: 'Sign up!'
                on_press: root.signup()